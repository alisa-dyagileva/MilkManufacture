<Page x:Class="MilkManufacture.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilkManufacture.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин" Margin="0,0,0,5"/>
            <TextBox x:Name="TBoxLogin" Height="41" Margin="0,0,0,15"/>

            <TextBlock Text="Пароль" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PBoxPassword" Height="40" Margin="0,0,0,20"/>

            <Button x:Name="BtnLogin" Click="BtnLogin_Click" Content="Войти" Height="30" Width="100"/>
        </StackPanel>
    </Grid>
</Page>
