<Page x:Class="MilkManufacture.Pages.CaptchaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MilkManufacture.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CaptchaPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Перетащите фрагменты в правильном порядке" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <Grid Name="GridCaptcha" Margin="20"/>
        </Viewbox>

        <Button Grid.Row="2" Content="Проверить" Name="BtnCheck" Click="BtnCheck_Click" Width="150" Height="40" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Page>